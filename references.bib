@article{laurentInvestissementAnticipationPlanification2021,
  title = {Investissement, Anticipation, Planification : La Politique Temporelle Des Activit{\'e}s Extractives},
  shorttitle = {Investissement, Anticipation, Planification},
  author = {Laurent, Brice and Merlin, Julien},
