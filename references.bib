  keywords = {adult,Article,capsaicin,central nervous system sensitization,Central sensitization,cold,Cold Temperature,Conditioning pain modulation,female,heat,Hot Temperature,human,Humans,hyperalgesia,male,middle aged,Multiple chemical sensitivity,pain assessment,Pain Measurement,pathophysiology,Quantitative sensory testing,questionnaire,Questionnaires}
