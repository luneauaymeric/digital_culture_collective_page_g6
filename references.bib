@article{hausteiner-wiehleMultipleChemicalSensitivity2013,
  title = {{Multiple chemical sensitivity (MCS)/Idiopathic environmental intolerances (IEI)}},
  shorttitle = {{Multiple chemical sensitivity (MCS)/Idiopathic environmental intolerances (IEI)}},
  author = {{Hausteiner-Wiehle}, C. and Wiesm{\"u}ller, G.A. and Bornschein, S. and Hornberg, C.},
  year = {2013},
  journal = {Umweltmedizin in Forschung und Praxis},
  volume = {18},
  number = {2},
  pages = {84--107},
  issn = {14308681 (ISSN)},
  abstract = {Multiple Chemical Sensitivity (MCS)/Idiopathic Environmental Intolerances (IEI) Multiple Chemical Sensitivity (MCS or Idiopathic Environmental Intolerances, IEI) is discussed partly as novel environmental disease and partly as environment-related functional or somatform disorder. Valid epidemiological data about the frequency of MCS are not available because of non mandatory disease definition. Prevalence of self-reported MCS (sMCS) is published as 9\% in Germany and about 15\% in USA. Prevalence of medically diagnosed MCS is estimated as 0.5\% in Germany and 2.5\% in USA. Affected persons react with multiple recurrent symptoms and signs to chemical triggers of various substance classes in extremely low concentrations. However, a causal relationship between chemicals and complaints can only be objectified very difficulty because of manifold and common triggers (e.g., fragrance, cigarette smoke or emission of furniture). Reproducible health effects as well as abnormalities in physical examinations, technical and laboratory tests are missed. The etiologically neutral terminus Idiopathic Environmental Intolerances (IEI) became neither in research nor in medical practice accepted. Normally, MCS-affected persons suffer heavily from their symptoms and signs; often they adapt their eating habits, living styles and working conditions amongst others and endorse an often longsome search for help and acceptance. As long as the pathphysiology of MCS is not finally clarified, a pragmatic care is advised: Attribution to chemicals shall be critically verified, but not too early judged as illegitimate. Because of a considerable co-morbidity with various mental diseases (above all anxiety and depression), other functional syndromes (e.g., irritable bowel syndrome, fibromyalgia syndrome) and many differential diagnostic, relevant, clear somatic (e.g., allergy or asthma) and mental diseases (e.g., panic disorder) shall be firstly done widely and thoroughly. The "label" MCS shall be used carefully. As long as scientific evidence about the outcome of the various therapeutic offers for MCS (esp. avoidance, detoxification, but also various psychotherapeutic approaches) is not given, therapy shall be predominantly coping orientated. Thereby, avoidance recommendations shall be provided as less as possible because these recommendations can further aggravate anxieties, negative outcomes for social and working life, and this may lead to extensive financial burden for the patients. Just in time, co-morbid diseases shall be detected and according guidance treated. Overall, the situation of MCSaffected persons reveals that both diagnostics and therapy of the MCS syndrome need a narrowly interdisciplinary cooperation of various disciplines.},
  langid = {german},
  keywords = {Idiopathic environmental intolerances,IEI,MCS,MCS-syndrome,Multiple chemical sensitivity}
}

