@article{azumaAssessmentCerebralBlood2015,
  title = {Assessment of Cerebral Blood Flow in Patients with Multiple Chemical Sensitivity Using Near-Infrared Spectroscopy---Recovery after Olfactory Stimulation: A Case--Control Study},
  author = {Azuma, K. and Uchiyama, I. and Tanigawa, M. and Bamba, I. and Azuma, M. and Takano, H. and Yoshikawa, T. and Sakabe, K.},
