@article{schrijenBretagneFaceAux2021,
  title = {La {{Bretagne}} Face Aux Industries Extractives. {{Processus}} de Cadrage et Construction de Coalitions Contre La Prospection Mini{\`e}re et l'extraction de Sable Dans Les {{C{\^o}tes}} d'{{Armor}}},
  author = {Schrijen, Damien},
